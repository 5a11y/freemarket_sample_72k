.MyPageMainMenu
  .MyPageMainMenu__ProfileHeader
    =image_tag 'member_photo_noimage_thumb.png',height: '60px', width: '60px'
    .MyPageMainMenu__ProfileHeader--UserName
      = current_user.nickname + "さん"
  .MyPageMainMenu__ProfileUnder
    .MyPageMainMenu__ProfileUnder__Title
      プロフィール詳細
    .MyPageMainMenu__ProfileUnder__Detail
      %p.MyPageMainMenuTitle 氏名
      .MyPageMainMenu__ProfileUnder__Detail__Name
        = current_user.profile.family_name
      .MyPageMainMenu__ProfileUnder__Detail__Name
        = current_user.profile.first_name
    .MyPageMainMenu__ProfileUnder__Birth
      %p.MyPageMainMenuTitle 
        誕生日
      .MyPageMainMenu__ProfileUnder__Birth__Detail
        = current_user.profile.birth_day.strftime("%Y年 %m月 %d日")
  .MyPageMainMenu__Credit
    %p.MyPageMainMenuTitle 
      クレジットカード
