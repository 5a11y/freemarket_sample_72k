            .SignUpTitle 番地
            .SignUpRequired 必須
          .ContentSignUp__Infomation__StreetNumber__City
            = f.text_field :nickname, class:"SinUpInputForm"

        .ContentSignUp__Infomation__BuildingName
          .ContentSignUp__Infomation__BuildingName__Title
            .SignUpTitle 建物名
            .SignUpOptional 任意
          .ContentSignUp__Infomation__BuildingName__City
            = f.text_field :nickname, class:"SinUpInputForm"

        .ContentSignUp__Infomation__CommonEntry
          .ContentSignUp__Infomation__CommonEntry__Area
