-# 新規会員登録画面へ遷移した際、最初に表示するview
%body
  .BodyColorSignUp
    = render "devise/shared/devise_header"
    .content
      .content__upper
        .cntent__upper__title
          新規会員登録
      .content__under
        .content__under__btn
          = link_to new_user_registration_path ,class: 'content__under__btn__email' do
            =icon('far','envelope', class: 'icon')
            .content__under__btn__text
              メールアドレスで登録する
        .content__under__btn
          = link_to "#",class: 'content__under__btn__facebook' do
            =icon('fab','facebook-square', class: 'icon')
            .content__under__btn__text
              Facebookで登録する
        .content__under__btn
          = link_to "#",class: 'content__under__btn__gmail' do
            =icon('fab','google', class: 'icon')
            .content__under__btn__text  
              Googleで登録する
    = render "devise/shared/devise_footer"