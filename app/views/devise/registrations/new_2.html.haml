%header
  .LogoHeader
    = link_to "#", class: "SignUpLogo" do
      = image_tag 'logo.png', width:185,height:49
      -# %img{alt: "logo-white", src: "assets/logo.png" , width:185,height:49 }
%body
  .ContentSignUp
    .ContentSignUp__Title
      会員情報入力
    .ContentSignUp__Infomation
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = render "devise/shared/error_messages", resource: resource
        .ContentSignUp__Infomation__CommonEntry
          = f.label "ニックネーム"
          %br/
          = f.text_field :email, autofocus: true, placeholder: "例）メルカリ太郎"
        .ContentSignUp__Infomation__CommonEntry
          = f.label "メールアドレス"
          %br/
          = f.email_field :email, autofocus: true, placeholder: "email"
        .ContentSignUp__Infomation__CommonEntry
          = f.label "パスワード"
          -# - if @minimum_password_length
          -#   %em
          -#     (#{@minimum_password_length} characters minimum)
          %br/
          = f.password_field :password, autocomplete: "new-password"
        .field
          = f.label "パスワード確認"
          %br/
          = f.password_field :password_confirmation, autocomplete: "new-password"
        .ContentSignUp__Infomation__Comfirm
          %p 本人確認
          %p 安心・安全にご利用いただくために、お客さまの本人情報の登録にご協力ください。他のお客さまに公開されることはありません。
        .ContentSignUp__Infomation__NameEntry
          .ContentSignUp__Infomation__NameEntry__Title
            = f.label "お名前(全角)"
            必須
          .ContentSignUp__Infomation__NameEntry__Form
            = f.text_field :email, autofocus: true, placeholder: "例）山田"
            = f.text_field :email, autofocus: true, placeholder: "例）彩"
        .ContentSignUp__Infomation__NameEntry
          .ContentSignUp__Infomation__NameEntry__Title
            = f.label "お名前カナ(全角)"
            必須
          .ContentSignUp__Infomation__NameEntry__Form
            = f.text_field :email, autofocus: true, placeholder: "例）ヤマダ"
            = f.text_field :email, autofocus: true, placeholder: "例）アヤ"
        .ContentSignUp__Infomation__Birth
          .ContentSignUp__Infomation__Birth__Title
            -# = f.date_select()
        .actions
          = f.submit "Sign up"
      = render "devise/shared/links"


