= render "share/header"
.ItemBody
  .ItemBox
    .ItemBox__ItemName
      =@item.product_name
    .ItemBox__ImageBody
      .ItemBox__ImageBody__ItemImg
        .ItemBox__ImageBody__ItemImg__Main
          %ul.ItemBox__ImageBody__ItemImg__Main__UpperBox
            %li
              = image_tag @item.images.first.image.url, class: "LargeItemImg"
              %ul.ItemBox__ImageBody__ItemImg__SubImage__UnderBox
                - @item.images.each do |image|
                  %li
                    = image_tag image.image.url, class: "SubItemImg"
            -# = image_tag "#{@image.image}", class: 'SubItemImg'
      .ItemBox__ImageBody__PraceBox
        .ItemBox__ImageBody__PraceBox__Prace
          %p¥
          %p=@item.price 
        .ItemBox__ImageBody__PraceBox__Tax
          %font
          (税込) 送料込み
      .ItemBox__ImageBody__ItemDetail
        =@item.description
      .ItemBox__ImageBody__TableBox
        %table
          %tr
            %th 出品者
            %td=@item.seller_id
