= render "share/header"
.ItemBody
  .ItemBox
    .ItemBox__ItemName
      =@item.product_name
    .ItemBox__ImageBody
      .ItemBox__ImageBody__ItemImg
        - @item.images.each_with_index do |photo,index|
          - if index == 0
            .ItemBox__ImageBody__ItemImg__UpperBox
              = image_tag photo.image.url, class: "LargeItemImg"
              -# -binding.pry
          - else 
            .ItemBox__ImageBody__ItemImg__Sub
              .ItemBox__ImageBody__ItemImg__Sub__UnderBox
                = image_tag photo.image.url, class: "SubItemImg"
    .ItemBox__PraceBox 
      .ItemBox__PraceBox__Prace
        %p.PriceText¥
        %p.PriceText=@item.price 
      .SmallText (税込) 送料込み
      %p.SmallText=@item.description
      .ItemBox__ImageBody__TableBox
        %table
          %tr
            %th 出品者
            %td=@item.user.nickname
          -# category機能追加時に表示させる。
          -# %tr
          -#   %th カテゴリー
          -#   %td 
          -#     = link_to "ベビーキッズ" ,"#"
          -#     %br/
          -#     = link_to "ベビー服(男女兼用) ~95cm" ,"#"
          -#     %br/
          -#     = link_to "アウター"
          -# %tr
          -#   %th ブランド
          -#   %td 
          -# %tr
          -#   %th 商品のサイズ
          -#   %td 
              
          %tr
            %th 商品の状態
            %td=@item.condition
              
          %tr
            %th 配送料の負担
            %td=@item.delivery_fee
              
          %tr
            %th 配送元の地域
            %td=@item.shipping_origin
              
          %tr
            %th 発送日の目安
            %td=@item.days_to_ship
        -# 追加機能時のビュー、ライクボタン、不適切ボタン。
        -# .ItemBox__ImageBody__OptionArea
